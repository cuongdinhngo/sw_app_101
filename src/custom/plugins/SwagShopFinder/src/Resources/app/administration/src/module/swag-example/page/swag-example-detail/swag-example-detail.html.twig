{% block swag_example_detail %}
    <sw-page class="swag-example-detail">
        <template #smart-bar-actions>
            <sw-button :routerLink="{name: 'swag.example.index'}">
                {{ $tc('swag-example.detail.cancelButtonText') }}
            </sw-button>

            <sw-button-process
                :isLoading="isLoading"
                :processSuccess="processSuccess"
                variant="primary"
                @process-finish="saveFinish"
                @click="onClickSave">
                {{ $tc('swag-example.detail.saveButtonText') }}
            </sw-button-process>
        </template>
        <template #content>
            <sw-card-view>
                <sw-card v-if="shop" :isLoading="isLoading">
                    <sw-text-field
                        v-model:value="shop.name"
                        label="Name"
                    ></sw-text-field>

                    <sw-text-field
                        v-model:value="shop.street"
                        label="Street"
                    ></sw-text-field>

                    <sw-text-field
                        v-model:value="shop.city"
                        :label="$tc('swag-example.detail.cityLabel')"
                    ></sw-text-field>

                    <sw-radio-field
                        v-model:value="shop.active"
                        :label="$tc('swag-example.detail.statusLabel')"
                        :options="options"
                    ></sw-radio-field>

                    <sw-single-select
                        v-model:value="shop.countryId"
                        :options="countries"
                        :placeholder="$tc('swag-example.detail.selectCountryPlaceholder')"
                        :label="$tc('swag-example.detail.assignCountryLabel')"
                    ></sw-single-select>

                    <sw-text-field
                        v-model:value="shop.latitude"
                        :label="$tc('swag-example.detail.latitudeLabel')"
                    ></sw-text-field>

                    <sw-text-field
                        v-model:value="shop.longitude"
                        :label="$tc('swag-example.detail.longitudeLabel')"
                    ></sw-text-field>
                </sw-card>
            </sw-card-view>
        </template>
    </sw-page>
{% endblock %}
